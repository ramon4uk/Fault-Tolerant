{
  "name": "learn-dlq",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:aws-dev": "serverless deploy --stage aws-dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "remove:dev": "serverless remove --stage dev",
    "remove:aws-dev": "serverless remove --stage aws-dev",
    "remove:staging": "serverless remove --stage staging",
    "remove:prod": "serverless remove --stage prod",
    "logs": "serverless logs",
    "logs:submit": "serverless logs --function submitTask --tail",
    "logs:process": "serverless logs --function processTask --tail",
    "logs:dlq": "serverless logs --function monitorDLQ --tail",
    "info": "serverless info",
    "info:dev": "serverless info --stage dev",
    "info:aws-dev": "serverless info --stage aws-dev",
    "info:staging": "serverless info --stage staging",
    "info:prod": "serverless info --stage prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "serverless offline --stage local",
    "start:simple": "IS_LOCAL=true serverless offline --stage local --noTimeout",
    "test:api": "./test-api.sh",
    "test:local": "node scripts/local-test.js",
    "test:manual": "node scripts/local-test.js",
    "dev:aws": "echo 'Use AWS dev environment: npm run deploy:aws-dev && npm run test:aws-dev'",
    "test:aws-dev": "curl -X POST $(npm run info:aws-dev --silent | grep -E 'https://.*\\.execute-api\\.' | awk '{print $NF}')/aws-dev/tasks -H 'Content-Type: application/json' -d '{\"answer\": \"AWS Dev test\"}' | jq"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/node": "^24.0.3",
    "@types/jest": "^29.5.12",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "serverless": "^3.40.0",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-offline": "^12.0.4",
    "serverless-offline-sqs": "^7.3.2",
    "serverless-localstack": "^1.1.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.830.0",
    "@aws-sdk/client-sqs": "^3.831.0",
    "@aws-sdk/lib-dynamodb": "^3.830.0",
    "aws-sdk": "^2.1692.0",
    "uuid": "^11.1.0"
  }
}
